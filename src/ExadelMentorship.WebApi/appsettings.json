{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ForecastDaySettings": {
    "MinForecastDay": 0,
    "MaxForecastDay": 8
  },

  "HistorySettingStorage": {
    "HistorySettings": [
      {
        "City": "Tbilisi",
        "ExecutionTime": "10:0"
      },
      {
        "City": "Tashkent",
        "ExecutionTime": "10:15"
      },
      {
        "City": "London",
        "ExecutionTime": "15:30"
      }
    ]
  },

  "AllowedHosts": "*",

  "AuthConfig": {
    "url": "https://localhost:7046/.well-known/openid-configuration",
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../ExadelMentorship.WebApi/logs/webapi.log",
          "rolllingInterval": "Day"
        }
      }
    ]
  }

}
